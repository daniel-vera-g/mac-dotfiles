# Neovim
alias v="nvim"
alias lv="lvim"
# Open LunarVim and ...
alias lvf='lvim "+Telescope find_files"' # ...instantly open fuzzy finder
alias lvr="lvim \"+lua require('persistence').load()\"" # ...load last session

# Git
alias g="git"
alias gs="git status"
alias gam="git add . && git commit -m"
alias gc="git checkout"
alias gcb="git checkout -b"
alias gprg="git push gitlab"

# General aka. system
alias x+="chmod +x"
alias cppt="pwd | pbcopy"
alias refresh="source ~/.zshrc"
alias so="source"

# cli apps
alias lzg="lazygit"
alias l="exa --long --header -a" # Or lx?
alias cat="bat"

# Tmux
alias t="tmux"
alias ta="t a -t"
alias tls="t ls"
alias tn="t new -t"
alias tmuxKillS="tmux kill-session -t"
alias tmuxRenS="tmux rename-session -t"
alias tmuxNewSess="tmux new-session -s"
alias tmuxNewSessN="tmux new-session -t"

# Docker
alias dk="docker"
alias dkps="docker ps"
alias dkpsa="docker ps -a"
# ... Compose
alias c="docker-compose"

# Utils
alias simpleWebServer="python3  -m http.server 8080 --bind 127.0.0.1"
alias ten='trans en:de'
alias tde='trans de:en'
alias codenx="code --disable-extensions"
alias caff60='caffeinate -d -t  $(expr 60 \* 60)' #  
# TODO: alias ejectAll="osascript -e 'tell application 'Finder' to eject (every disk whose ejectable is true and local volume is true and free space is not equal to 0)'"

# K8s
alias k=kubectl

# brew
alias brupd="brew update"
alias brupg="brew upgrade"
alias bro="brew outdated"
alias bri="brew install"
alias brl="brew list"

# tree
alias tree1="tree -L 1"
alias tree2="tree -L 2"
alias tree3="tree -L 3"
