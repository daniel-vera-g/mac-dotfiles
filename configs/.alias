# Neovim
alias v="nvim"
alias lv="lvim"

# Git
alias g="git"
alias gs="git status"
alias gam="git add . && git commit -m"

# General
alias x+="chmod +x"
alias cppt="pwd | pbcopy"

# cli apps
# Show hidden and details
alias n="nnn -dH"
alias lzg="lazygit"
alias lx="exa --long --header"

# Tmux
alias ta="tmux attach -t"
alias tns="tmux new-session -s"

# Docker
alias dk="docker"
alias dkps="docker ps"
alias dkpsa="docker ps -a"
